---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <div class="w-auto md:pr-5">
      <p class="text-theme-muted mb-6 text-base">
        {description}
      </p>
      <div class="flex flex-wrap gap-3">
        <a
          href="mailto:bilalnaeem166@gmail.com"
          class="inline-flex items-center gap-2 rounded-lg bg-primary/10 px-4 py-2 text-sm font-medium text-primary transition-colors duration-200 hover:bg-primary/20"
        >
          Contact Me
        </a>
      </div>
    </div>
    <div
      class="bg-theme border-theme h-80 w-64 flex-shrink-0 rotate-[5deg] border p-4 md:rotate-[7deg]"
    >
      <Image
        class="object-cover"
        src={image}
        width="260"
        height="260"
        alt={`Bilal Naeem PFP`}
      />
    </div>
  </div>
</Section>
